<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image Section with rounded corners and slider -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/btn_like"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="12dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_heart"
                    android:contentDescription="Like"
                    android:elevation="6dp"
                    android:padding="8dp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dynamic Dots indicator for image slider -->
        <LinearLayout
            android:id="@+id/image_slider_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="-8dp"/>

        <!-- Location info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:contentDescription="Location Icon" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F. Pimentel Avenue, corner Urbano St"
                android:textColor="#d32f2f"
                android:textSize="12sp"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/place_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Rustic Cafe"
            android:textSize="24sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sweet, salty and everything in between  Available in coffee-based or non-coffee optionsâ€”your perfect pick!"
            android:textSize="14sp"
            android:textColor="#616161"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="12dp" />

        <!-- Hours and Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/hours_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours: 10dAM - 10PM"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: 0917 808 4887"
                android:textSize="14sp"
                android:textColor="#424242" />
        </LinearLayout>

        <!-- Rating and Review, Travel Time info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:weightSum="3">

            <!-- Rating with Star, score -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/btn_star_big_on"
                    android:contentDescription="Star icon" />

                <TextView
                    android:id="@+id/rating_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- Read Reviews -->
            <TextView
                android:id="@+id/read_reviews"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Read Reviews"
                android:textColor="#d32f2f"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="6dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="8dp"/>

            <!-- Travel info -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:contentDescription="Car icon" />

                <TextView
                    android:id="@+id/travel_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min by car"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Divider line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginBottom="16dp" />

        <!-- Customer Reviews Header and Sort Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/customer_reviews_title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Customer reviews"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sort_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sort by: Newest"
                android:textAllCaps="false"
                android:backgroundTint="#eeeeee"
                android:textColor="#424242"
                android:layout_gravity="end" />
        </LinearLayout>

        <!-- Reviews container -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scrollbars="none"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Review 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Stars"
                            android:textColor="#FFC107"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Great food, homely vibe. Will visit again!"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:layout_marginBottom="12dp"
                            android:maxLines="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anna Smith"
                            android:textColor="#757575"
                            android:textSize="12sp"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Review 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 Stars"
                            android:textColor="#FFC107"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Love the coffee selection and cozy seating."
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:layout_marginBottom="12dp"
                            android:maxLines="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John D."
                            android:textColor="#757575"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Review 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Stars"
                            android:textColor="#FFC107"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The ambiance is perfect for working and relaxing."
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:layout_marginBottom="12dp"
                            android:maxLines="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sophia W."
                            android:textColor="#757575"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Get Directions button -->
        <Button
            android:id="@+id/get_directions_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/rounded_button"
            android:text="Get Directions"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="24dp" />

        <!-- Floating Favorite Heart Button -->
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@drawable/circle_shadow"
            android:src="@android:drawable/btn_star_big_off"
            android:contentDescription="Add to favorites button"
            android:layout_marginTop="-24dp"
            android:layout_marginEnd="24dp"/>

    </LinearLayout>


</ScrollView>

